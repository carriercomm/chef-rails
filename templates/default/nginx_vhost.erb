  # Maintained by Chef.  Local changes will be overwritten

  <% if @php %>
    upstream php_<%= @name %> {
      server unix:/var/run/php-fpm-<%= @name %>.sock;
    }
  <% end %>
  <% unless node.role? "vagrant" and not @disable_www %>
  server {
    listen <%= @listen %>;    
    server_name www.<%= Array(@server_name)[0] %>;
    return 301 $scheme://<%= Array(@server_name)[0] %>$request_uri;    
  }
  <% end %>

  server {
    listen <%= @listen %> <%= "default" if @default %> <%= "deferred" if @deferred %>;    
    server_name <%= Array(@server_name).join(', ') %>;    
    
    <% if @ssl %>ssl on;
    ssl_certificate <%= @ssl[:certificate] %>;
    ssl_certificate_key <%= @ssl[:certificate_key] %>;<% end %>

    root   <%= @path %>/docs;
    autoindex off;
    charset utf-8;

    <% Array(@block).each do |b| %>
    <%= b %>
    <% end %>

    <% if @rewrites %> 
      <% @rewrites.each do |rewrite| %>
        rewrite <%= rewrite["query"] %> <%= rewrite["uri"] %> <%= rewrite["options"] %>;
      <% end %>
    <% end %>

    <% if @access_log %>
    access_log <%= @path %>/log/access.log multi;
    <% else %>
    access_log off;
    <% end %>

    <% if @error_log %>
    error_log <%= @path %>/log/error.log error;
    <% end %>
    
    <% if @hidden %>
      <% hidden_paths = "|" %>
      <% hidden_paths << Array(@hidden).join('|') %>
    <% end %>

    location ~ (/(include/|cache/|modules/|uploads/|ini.php)|/\.svn/|/\.git/|/.hta.+<%=hidden_paths%>){
      access_log off;
      log_not_found off;
      deny all;
    }

    #location / {               
    #  index   index.php index.html;
    #  if (!-e $request_filename) {     
    #    rewrite ^(.*)$ /index.php last;
    #  }
    #  #limit_req zone=antiddos burst=10;
    #}

    location / {
      try_files $uri/index.html $uri /index.php?$args;
    }

    <% if @admin %>
    location /admin/ {    
      root   <%= @path %>/docs/admin;
      try_files $uri $uri/ /admin/index.php?$args;
    }
    <% end %>

    <% if @php %>
      <% if @min %>
      location /min {
        include fastcgi_params;
        fastcgi_pass  php_<%= @name %>; 
        fastcgi_index index.php;        
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        
        # Nginx caching.
        #fastcgi_cache fastcgi_cache;
        #fastcgi_cache_valid 200 304 404 240h;
        #fastcgi_cache_key "$request_method|$http_if_modified_since|$http_if_none_match|$host|$request_uri";
      }
      <% end %>

      location ~ \.php$ {       
        try_files $uri =404;
        include fastcgi_params;    
        fastcgi_pass  php_<%= @name %>; 
        fastcgi_index index.php;      
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;             
      }    

      location @website {
        include fastcgi_params;
        fastcgi_pass  php_<%= @name %>; 
        fastcgi_index index.php;      
        fastcgi_param  SCRIPT_FILENAME  $document_root/index.php;      
      }
    <% end %>

    location ~* ^.+\.(jpg|jpeg|gif|png|ico|svg|js|css|mp3|ogg|mpe?g|avi|zip|gz|bz2?|rar|txt|syx)$ {
      <% if @file_rewrites %>
      try_files $uri @file_rewrite;
      <% end %>
      access_log        off;
      log_not_found     off;
      expires           360d;
    }

    location @file_rewrite {
      <% if @file_rewrites %>
      <% @file_rewrites.each do |rewrite| %>
      rewrite <%= rewrite["query"] %> <%= rewrite["uri"] %> <%= rewrite["options"] %>;
      <% end %>
      <% end %>     
    }
    
    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
      root   /var/www/html;
    }
  }