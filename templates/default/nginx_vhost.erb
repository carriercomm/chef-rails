  # Maintained by Chef.  Local changes will be overwritten

  <% if @php %>
    upstream php_<%= @name %> {
      server unix:/var/run/php-fpm-<%= @name %>.sock;
    }
  <% end %>
  <% unless node.role? "vagrant" and not @disable_www %>
  server {
    listen <%= @listen %>;    
    server_name www.<%= Array(@server_name)[0] %>;
    return 301 $scheme://<%= Array(@server_name)[0] %>$request_uri;    
  }
  <% end %>

  server {
    listen <%= @listen %> <%= "default" if @default %> <%= "deferred" if @deferred %>;    
    server_name <%= Array(@server_name).join(', ') %>;    
    
    <% if @ssl %>ssl on;
    ssl_certificate <%= @ssl[:certificate] %>;
    ssl_certificate_key <%= @ssl[:certificate_key] %>;<% end %>

    root   <%= @path %>/docs;
    autoindex off;
    charset utf-8;

    <% Array(@block).each do |b| %>
    <%= b %>
    <% end %>

    <% if @rewrites %> 
      <% @rewrites.each do |rewrite| %>
        rewrite <%= rewrite["query"] %> <%= rewrite["uri"] %> <%= rewrite["options"] %>;
      <% end %>
    <% end %>

    <% if @access_log %>
    access_log <%= @path %>/log/access.log multi;
    <% else %>
    access_log off;
    <% end %>

    <% if @error_log %>
    error_log <%= @path %>/log/error.log error;
    <% end %>
    
    <% if @hidden %>
      <% hidden_paths = "|" %>
      <% hidden_paths << Array(@hidden).join('|') %>
    <% end %>

    location ~ (/(include/|cache/|modules/|uploads/|ini.php)|/\.svn/|/\.git/|/.hta.+<%=hidden_paths%>){
      access_log off;
      log_not_found off;
      deny all;
    }
    
    <% if @php %>
      location = / {
        try_files @website @website;
      }
      
      <% if @php_rewrites %>
      <% @php_rewrites.each do |r| %>  
      <% if r[:ext] %>      
      location ~ \.<%= r[:ext] %>$ {
          try_files $uri @website;
      }
      <% elsif r[:location] %>
      location <%= r[:location] %> {    
        index index.html index.php
        try_files $uri $uri/ =404;
      }
      <% end %>
      <% end %>      
      <% else %>
      location / {
          try_files $uri $uri/ /index.php?$args;
      }
      <% end %>

      <% if @admin %>
      location /admin/ {    
        index index.html index.php
        try_files $uri $uri/ =404;
      }
      <% end %>

      <% if @min %>
      location /min/ {
        index index.html index.php
        try_files $uri $uri/ =404;
      }
      <% end %>

      location ~ \.php$ {       
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        include fastcgi_params;    
        fastcgi_pass  php_<%= @name %>; 
        fastcgi_index index.php;      
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;             
      }    

      location @website {
        include fastcgi_params;
        fastcgi_pass  php_<%= @name %>;       
        fastcgi_param  SCRIPT_FILENAME  $document_root/index.php;      
      }

      #location @admin_website {
      #  include fastcgi_params;
      #  fastcgi_pass  php_<%= @name %>; 
       ## fastcgi_index index.php;      
      #  fastcgi_param  SCRIPT_FILENAME  $document_root/admin/index.php;      
      #}
    <% else %>
      location / {
        index index.html;
        try_files $uri $uri/ =404;
      }
    <% end %>

    location ~* ^.+\.(jpg|jpeg|gif|png|ico|svg|js|css|mp3|ogg|mpe?g|avi|pdf|doc|docx|xls|xlsx|ppt|pptx|dmg|tgz|tar.gz|zip|gz|bz2?|rar|txt|syx)$ {
      <% if @file_rewrites %>
      try_files $uri @file_rewrite;
      <% end %>
      access_log        off;
      log_not_found     off;
      expires           360d;
    }

    location @file_rewrite {
      <% if @file_rewrites %>
      <% @file_rewrites.each do |rewrite| %>
      rewrite <%= rewrite["query"] %> <%= rewrite["uri"] %> <%= rewrite["options"] %>;
      <% end %>
      <% end %>     
    }

    <% if @error_pages %>
      <% @error_pages.each do |p| %>
        error_page <%= p[:code] %> <%= p[:location] %>;
      <% end %>
    <% else %>
    error_page  500 502 503 504  /50x.html;
    location = /50x.html {
      root   /var/www/html;
    }  
    <% end %>
  }